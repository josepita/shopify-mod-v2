# --- Shopify ---
# Token de acceso privado de la app/admin
SHOPIFY_ACCESS_TOKEN=pon_aqui_tu_token

# URL de la tienda. Puede ser "mi-tienda.myshopify.com" o con https://
SHOPIFY_SHOP_URL=mi-tienda.myshopify.com

# Versión de API (opcional; por defecto 2024-01)
SHOPIFY_API_VERSION=2024-01

# --- MySQL ---
MYSQL_HOST=localhost
MYSQL_DATABASE=shopify_sync
MYSQL_USER=root
# Requerido: si está vacío, la app fallará al arrancar
MYSQL_PASSWORD=cambia_esto
MYSQL_PORT=3306

# --- App (opcionales) ---
# Tamaño de lote para operaciones batch
BATCH_SIZE=50
# Timeout en segundos para requests HTTP
REQUEST_TIMEOUT=30

# --- Scripts opcionales ---
# Necesario para scripts de stock/precio si los usas
# SHOPIFY_LOCATION_ID=

